# Activar motor de reescritura
RewriteEngine On
RewriteBase /alibot/public/

# Si el archivo o directorio existe, no hacer nada
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Reescribir URLs limpias → archivo PHP correspondiente
# Ejemplo: /aaa → aaa.php
RewriteRule ^([^/]+)/?$ $1.php [L]

# (Opcional) Forzar UTF-8 para PHP y HTML
AddDefaultCharset UTF-8
