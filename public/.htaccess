# --------------------------------------
# Habilitar motor de reescritura
# --------------------------------------
RewriteEngine On
RewriteBase /alibot/public/

# --------------------------------------
# No reescribir si es un archivo o directorio real
# --------------------------------------
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# --------------------------------------
# Reescribir URLs limpias sin extensión
# Ejemplo: /empresa → empresa.php
# --------------------------------------
RewriteRule ^([a-zA-Z0-9_-]+)/?$ $1.php [L,QSA]

# --------------------------------------
# Forzar UTF-8 para contenido HTML y PHP
# --------------------------------------
AddDefaultCharset UTF-8
