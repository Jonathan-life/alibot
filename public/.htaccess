RewriteEngine On
RewriteBase /alibot-api/public/
# Activar mod_rewrite
RewriteEngine On
RewriteBase /

# Si el archivo o directorio no existe, reescribir
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Reescribe "pagina" → "pagina.php"
RewriteRule ^([^/]+)/?$ $1.php [L]

# Opcional: redirige URL con .php a la versión limpia
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php[\s?]
RewriteRule ^ %1 [R=301,L]
